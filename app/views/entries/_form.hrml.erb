<%= form_with(model: entry, url: entries_path) do |form| %>
  <% if entry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(entry.errors.count, "error") %> prohibited this entry from being saved:</h2>

      <ul>
      <% entry.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :occurred_on %>
    <%= form.date_field :occurred_on %>
  </div>

  <div class="field">
    <%= form.label :place_id, "Select a Place" %>
    <%= form.collection_select :place_id, current_user.places, :id, :name %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>